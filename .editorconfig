[*.cs]
indent_style = tab
indent_size = 4
end_of_line = lf
max_line_length = 80
trim_trailing_whitespace = true
ensure_final_newline = true
csharp_space_after_keywords_in_control_flow_statements = false
csharp_new_line_before_open_brace = none
csharp_new_line_before_else = false
csharp_new_line_before_catch = false
csharp_new_line_before_finally = false
csharp_new_line_before_members_in_object_initializers = false
csharp_new_line_before_members_in_anonymous_types = false
csharp_preserve_single_line_statements = true
csharp_preserve_single_line_blocks = true
csharp_indent_block_contents = true
csharp_indent_braces = false
csharp_style_prefer_no_braces = true
csharp_indent_case_contents = true          # Indent contents of case blocks in switch statements
csharp_indent_switch_labels = true          # Indent switch labels (e.g., case, default) from the switch keyword
csharp_indent_labels = true                 # Indent labels (e.g., goto targets) one level
csharp_indent_accessors = true              # Indent get/set bodies inside properties or indexers
csharp_indent_block_contents_inside_lambda = true  # Indent contents of lambda expressions
csharp_indent_block_contents_inside_expression_bodied_members = true  # Indent expression-bodied member contents
