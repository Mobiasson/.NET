<Window x:Class="WPF.Exercise8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Exercise8" Height="450" Width="800">
	<Grid ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>


		<Label Content="Students:" />
		<ListBox x:Name="list" Margin="20,100,20,20" BorderThickness="2" BorderBrush="Black">
			<ListBoxItem>Mikael</ListBoxItem>
		</ListBox>

		<StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0">
			<Label Content="FirstName:"/>
			<TextBox x:Name="firstName" Width="170"/>
			<Label Content="LastName:" Margin="0 20 0 0"/>
			<TextBox x:Name="lastName" Width="170"/>
			<Label Content="Email:" Margin="0 20 0 0"/>
			<TextBox x:Name="email" Width="170"/>
			<Button Click="Button_Click" Content="OK" Width="60" Margin="0 10 0 0" />
		</StackPanel>

		
	</Grid>
</Window>
