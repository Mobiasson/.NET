<Window
	x:Class="XAML.Exercise5"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:XAML"
	mc:Ignorable="d"
	Title="Exercise5"
	Height="450"
	Width="800">
	<Grid>
		<Canvas>
			<Border
				x:Name="movableLabel"
				BorderBrush="Black"
				BorderThickness="1"
				CornerRadius="5"
				Background="LightGray"
				Padding="10">
				<Label
					x:Name="label"
					Content="X = 0, Y = 0" />
			</Border>
		</Canvas>
		<Slider
			x:Name="xy_slider"
			Minimum="0"
			Maximum="700"
			ValueChanged="xy_slider_ValueChanged"
			VerticalAlignment="Bottom"
			Width="200"
			Margin="0 0 0 20" />
		<StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			VerticalAlignment="Bottom">
			<CheckBox
				x:Name="x_lock"
				IsChecked="False"
				Content="x-lock"
				Margin="5" />
			<CheckBox
				x:Name="y_lock"
				IsChecked="False"
				Content="y-lock"
				Margin="5" />
		</StackPanel>
	</Grid>
</Window>
  