<Window x:Class="XAML.Exercise6" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:XAML" mc:Ignorable="d" Title="Exercise6" Height="450" Width="800">
	<Grid ShowGridLines="True">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom" Margin="20">
			<Label Content="Students:" />
			<ListBox Width="Auto" Height="330" BorderBrush="Black" BorderThickness="1" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent, Mode=TwoWay}" DisplayMemberPath="FullName" />
		</StackPanel>
		<StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" DataContext="{Binding SelectedStudent}">
			<Label Content="FirstName" />
			<TextBox x:Name="FirstName" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="100" />
			<Label Content="LastName" Margin="0 20 0 0" />
			<TextBox x:Name="LastName" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="100" />
			<Label Content="Email" Margin="0 20 0 0" />
			<TextBox x:Name="Email" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="100" />
		</StackPanel>
	</Grid>
</Window>

