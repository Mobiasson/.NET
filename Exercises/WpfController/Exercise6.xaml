<Window x:Class="XAML.Exercise6" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:XAML" mc:Ignorable="d" Title="Exercise6" Height="450" Width="800">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Click="MenuItem_Click" Header="Exit" />
			</MenuItem>
			<MenuItem Header="Edit">
				<MenuItem x:Name="menuItem_add" Click="add_button_Click" Header="Add Student" />
				<MenuItem x:Name="menuItem_remove" Click="remove_button_Click" IsEnabled="False" Header="Remove Student" />
			</MenuItem>
		</Menu>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid Grid.Column="0" Margin="20" VerticalAlignment="Bottom">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Label Grid.Row="0" Grid.Column="0" Content="Students:" HorizontalAlignment="Left" />
				<Button x:Name="add_button" Click="add_button_Click" Grid.Row="0" Grid.Column="0" Content="Add" HorizontalAlignment="Right" Margin="5" />
				<Button x:Name="remove_button" IsEnabled="False" Click="remove_button_Click" Grid.Row="0" Grid.Column="1" Content="Remove" HorizontalAlignment="Right" Margin="0 5 0 5" />
				<ListBox x:Name="student_list" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="330" BorderBrush="Black" BorderThickness="1" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent, Mode=TwoWay}" DisplayMemberPath="FullName" SelectionChanged="student_list_SelectionChanged" />
			</Grid>
			<StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" DataContext="{Binding SelectedStudent}">
				<Label Content="FirstName" />
				<TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="100" />
				<Label Content="LastName" Margin="0,20,0,0" />
				<TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="100" />
				<Label Content="Email" Margin="0,20,0,0" />
				<TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="100" />
			</StackPanel>
		</Grid>
	</DockPanel>
</Window>